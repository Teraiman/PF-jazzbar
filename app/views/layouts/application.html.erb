<!DOCTYPE html>
<html>
  <head>
    <title>Jazzbar</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!--ヘッダー-->
    <header>
      <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">

          <!--ロゴマーク-->
          <h1><%= link_to "Jazzbar", root_path, class: "navbar-brand"  %></h1>

          <!--ヘッダーメニュー-->
          <div class="navbar">
            <% if admin_signed_in? %>
              <%= link_to "SCHEDULE", schedules_path, class:"nav-menu-text m-2" %>
              <%= link_to "会員一覧", admin_customers_path, class:"nav-menu-text m-2" %>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"nav-menu-text m-2" %>
            <% elsif customer_signed_in? %>
              <div class="text-white p-2 mx-2">
                ようこそ 「<%= current_customer.name %>」 様
              </div>
              <!--%= link_to "通知ボタン", products_path, class:"nav-menu-text m-2" %>-->
              <%= link_to "SCHEDULE", schedules_path, class:"nav-menu-text m-2" %>
              <%= link_to "マイページ", customer_path(current_customer), class:"nav-menu-text m-2" %>
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"nav-menu-text m-2" %>
            <% else %>
              <%= link_to "SCHEDULE", schedules_path, class:"nav-menu-text m-2" %>
              <%= link_to "新規登録", new_customer_registration_path, class:"nav-menu-text m-2" %>
              <%= link_to "ログイン", new_customer_session_path, class:"nav-menu-text m-2" %>
            <% end %>
          </div>

          <!--ハンバーガーメニュー-->
          <button class="navbar-toggler" type="button"
            data-toggle="collapse"
            data-target="#navmenu1"
            aria-controls="navmenu1"
            aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navmenu1">
            <div class="navbar-nav text-right">
              <%= link_to "About", about_path, class: "nav-item nav-link" %>
              <%= link_to "Information", informations_path, class: "nav-item nav-link" %>
              <%= link_to "House rule", house_rules_index_path, class: "nav-item nav-link" %>
              <%= link_to "Access", access_path, class: "nav-item nav-link" %>
              <%= link_to "お問い合わせ", root_path, class: "nav-item nav-link" %>
            </div>
          </div>

        </div>
      </nav>
    </header>
  <!--ヘッダー-->

    <%= yield %>

  <!--フッター-->
    <footer class="bg-dark p-5 mt-5 text-white">
      <div class="container">
        <div class="text-center">
          <span>Follow us</span>
          <%= link_to root_path do %>
            <span><i class="fab fa-twitter fa-3x" style="color: #00acee;"></i></span>
          <% end %>
          <%= link_to root_path do %>
            <span><i class="fab fa-youtube fa-3x" style="color: #c4302b;"></i></span>
            <% end %>
          <%= link_to root_path do %>
            <span><i class="fab fa-facebook fa-3x" style="color: #3b5998;"></i></span>
          <% end %>
        </div>
        <div class="text-center">Copyright © 2021 Jazz bar Inc. All Rights Reserved.</div>
      </div>
    </footer>
  <!--フッター-->
  </body>
</html>
