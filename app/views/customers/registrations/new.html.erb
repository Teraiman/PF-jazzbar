<h1 class="title text-center">新規会員登録</h1>

<div class="container p-5">
  <div class="row">
    <div class="col-12">


      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

        <div class="form-group form-inline col-12 offset-3">
          <p class="text-left flex-nowrap col-3">氏名</p>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="form-group form-inline col-12 offset-3">
          <p class="text-left flex-nowrap col-3">フリガナ</p>
          <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana" %>
        </div>

        <div class="form-group form-inline col-12 offset-3">
          <p class="text-left flex-nowrap col-3">メールアドレス</p>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group form-inline col-12 offset-3">
          <p class="text-left flex-nowrap col-3">郵便番号（ハイフンなし）</p>
          <%= f.text_field :postal_cord, autofocus: true, autocomplete: "postal_cord" %>
        </div>

        <div class="form-group form-inline col-12 offset-3">
          <p class="text-left flex-nowrap col-3">住所</p>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>

        <div class="form-group form-inline col-12 offset-3">
          <p class="text-left flex-nowrap col-3">電話番号（ハイフンなし）</p>
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>

        <div class="form-group form-inline col-12 offset-3">
          <p class="text-left flex-nowrap col-3">パスワード（<%= @minimum_password_length %> 文字以上）</p>
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="form-group form-inline col-12 offset-3">
          <p class="text-left flex-nowrap col-3">パスワード（確認用）</p>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions col-12 mt-5">
          <%= f.submit "新規登録",class: 'btn btn-success rounded-pill col-3 offset-4' %>
        </div>
      <% end %>

      <div class="actions col-12 offset-3 mt-5">
        <%= render "customers/shared/links" %>
      </div>

    </div>
  </div>
</div>