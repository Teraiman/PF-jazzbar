<div class="container">
  <div class="row">
    <div class="col-12">

      <h2>新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :氏名 %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :フリガナ %>
          <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :郵便番号（ハイフンなし） %>
          <%= f.text_field :postal_cord, autofocus: true, autocomplete: "postal_cord" %>
        </div>

        <div class="field">
          <%= f.label :住所 %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
        
        <div class="field">
          <%= f.label :電話番号（ハイフンなし） %>
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>（<%= @minimum_password_length %> 文字以上）</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（確認用） %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

      <%= render "customers/shared/links" %>


    </div>
  </div>
</div>