<h1 class="title text-center p-5">会員情報編集</h1>
<div class="container">
  <%= form_with model: @customer, url: customer_path, local:true, method: :patch do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

    <div class="row pt-5">
      <div class="col-3 offset-1"><%= f.label :氏名 %></div>
      <div class="col-6"><%= f.text_field :name, class:"form-control"%></div>
    </div>

    <div class="row pt-3">
      <div class="col-3 offset-1"><%= f.label :フリガナ %></div>
      <div class="col-6"><%= f.text_field :name_kana, class:"form-control"%></div>
    </div>

    <div class="row pt-3">
      <div class="col-3 offset-1"><%= f.label :メールアドレス %></div>
      <div class="col-6"><%= f.text_field :email, class:"form-control"%></div>
    </div>

    <div class="row pt-3">
      <div class="col-3 offset-1"><%= f.label :郵便番号（ハイフンなし） %></div>
      <div class="col-6"><%= f.text_field :postal_cord, class:"form-control"%></div>
    </div>

    <div class="row pt-3">
      <div class="col-3 offset-1"><%= f.label :住所 %></div>
      <div class="col-6"><%= f.text_field :address, class:"form-control"%></div>
    </div>

    <div class="row pt-3">
      <div class="col-3 offset-1"><%= f.label :電話番号（ハイフンなし） %></div>
      <div class="col-6"><%= f.text_field :telephone_number, class:"form-control"%></div>
    </div>

    <div class="row py-5">
      <div class="col-5 offset-5"><%= f.submit "編集内容を保存", class: "btn btn-success" %></div>
      <div class="col-2 pt-5"><%= link_to '退会する', quitcheck_customer_path, class: "btn btn-danger btn-sm"%></div>
    </div>

  <% end %>
</div>
