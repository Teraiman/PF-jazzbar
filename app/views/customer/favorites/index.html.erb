<h1 class="title text-center p-5">お気に入り一覧</h1>

<div class="container">
  <div class="row p-5">
    <table class="table table-hover">
      <tr>
        <th>NAME</th>
        <th>PART</th>
        <th>FAVORITE</th>
      </tr>
      <tr>
        <% if @favorite_list.present? %>
          <% @favorite_list.each do |post| %>
            <td>
              <%= post.name %>
            </td>
            <td>
              <%= post.part.part_name %>
            </td>
            <td>
              <%= render 'customer/favorites/favorite', artist: post %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
