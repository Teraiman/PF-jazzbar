<h3 class="text-center p-5">スタッフ用メモ編集画面</h3>

<div class="container">
  <%= form_with model:@customer, url:admin_customer_path, local:true, method: :patch do |f| %>
  
    <div class="row">
      <div class="col-4 offset-4"><%= f.text_area :memo, class:"form-control"%></div>
    </div>
    
    <div class="text-center pt-5">
      <%= f.submit "保存", class: "btn btn-success" %>
    </div>
    
  <% end %>
</div>