        <
    </div>
  </div>

  <div class="row p-2">
    <span class="col-1.8">予約情報</span>
    <span class="col-2"><%= link_to "一覧表示", reserves_path, class: "btn btn-info" %></span>
    <span class="col-1.8">お気に入り</span>
    <span class="col-2"><%= link_to "一覧表示", artists_path, class: "btn btn-info" %></span>
  </div>
</div>