<h1 class="title text-center p-5">会員一覧</h1>
<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>電話番号</th>
            <th>ステータス</th>
            <th>メモ</th>
          </tr>
        </thead>
        <tbody class="table-light">
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.name, admin_customer_path(customer.id) %></td>
              <td><%= customer.telephone_number %></td>
              <td>
                <% if customer.is_deleted == false %>
                 <p class="text-success">有効</p>
                <% else %>
                 <p class="text-danger">退会</p>
                <% end %>
              </td>
              <td>
                <% if customer.memo.blank? %>
                  <i class="far fa-square"></i>
                <% else %>
                 <i class="far fa-check-square"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
