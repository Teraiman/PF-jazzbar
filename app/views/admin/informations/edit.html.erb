<h1 class="title text-center">INFORMATIO編集画面</h1>

<div class="container">
  <%= form_with model: @information, url: admin_information_path(@information.id), method: :patch, local:true do |f| %>

    <div class="row pt-5">
      <div class="col-3 offset-1"><%= f.label :日付 %></div>
      <div class="col-6"><%= f.date_field :date, class:"form-control"%></div>
    </div>

    <div class="row pt-5">
      <div class="col-3 offset-1"><%= f.label :タイトル %></div>
      <div class="col-6"><%= f.text_field :title, class:"form-control"%></div>
    </div>

    <div class="row pt-5">
      <div class="col-3 offset-1"><%= f.label :内容 %></div>
      <div class="col-6"><%= f.text_area :content, class:"form-control"%></div>
    </div>

    <div class="row p-5">
      <div class="col-5 offset-5"><%= f.submit "変更内容を保存", class: "btn btn-success" %></div>
    </div>
  <% end %>
</div>
