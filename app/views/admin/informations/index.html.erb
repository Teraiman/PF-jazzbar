<h3 class="text-center p-5">INFORMATION</h3>
<div class="container">
  <div class="row">
    <div class="col-2 offset-10">
      <%= link_to "新規作成", new_admin_information_path, class: "btn btn-info" %>
    </div>
  </div>
  <div class="row">
    <table class="table table-hover">
      <!--each文を使う-->
      <% @informations.each do |information| %>
          <tr>
            <td><%= information.date %></td>
            <td>
              <%= link_to admin_information_path(information.id) do %>
                <%= information.title %>
              <% end %>
            </td>
          </tr>
      <% end %>
      <!--each文を使う-->
    </table>
  </div>
  <%= paginate @informations %>
</div>
