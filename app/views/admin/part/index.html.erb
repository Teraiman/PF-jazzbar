<h1 class="title text-center p-5">パート一覧/追加</h1>

<div class="container">
  <%= form_with model: @part, url: admin_part_index_path, local:true do |f| %>
    <div class="row">
      <div class="col-12">
        <table class="form-group table table-borderless col-6">
          <tr>
            <th>パート名</th>
            <td><%= f.text_field :part_name %></td>
            <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
        </table>
      </div>
    </div>
  <% end %>
    <div class="row">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>パート</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @parts.each do |part| %>
            <tr>
              <td class="col-4"><%= part.part_name %></td>
              <td class="col-2"><%= link_to " 編集", edit_admin_part_path(part), class:"btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
