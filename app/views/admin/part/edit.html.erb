<h1 class="title text-center p-5">パート編集</h1>

<div class= "container">

  <div class="row p-5">
    <div class="col">
      <%= form_with model: @part, url: admin_part_path(@part.id), method: :patch, local: true do |f| %>
        <div class="form-group row align-items-center">
          <%= f.label :パート名, class: "my-auto" %>
          <%= f.text_field :part_name, class: "ml-5" %>
          <%= f.submit "変更を保存", class: "ml-5 btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
